<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/controleusuarios.css">
    <link rel="stylesheet" type="text/css" href="css/menu.css">
    <link rel="stylesheet" type="text/css" href="css/geraescala.css">

    <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/dark.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title></title>
    </head>
    <body>
        
        <div class="conteiner">
            
            <div class="cerneescala">

                <div class="flex-container">

                    <div class="flex-items">

                        <ul>
    
                            <li class="tabelames">
    
                                <div>Dia</div>
                                <div>1ยบ</div>
                                <div>2ยบ</div>
                                <div>3ยบ</div>                                   
    
                            </li> 
    
                            <% if(typeof(escala) != 'undefined') { %>
    
                                <% escala.forEach((element, index, array) => { %>
    
                                    <li class="tabelames">
    
                                        <div><strong><%= index %></strong></div>
                                        <div><%= element[0] %></div>
                                        <div><%= element[1] %></div>
                                        <div><%= element[2] %></div>                                   
    
                                    </li>  
    
                                <% }) %>
    
                            <% } %>
    
    
                        </ul>

                    </div>

                    <div class="flex-items">

                        <div>

                            <% if(typeof(operadoresturnos) != 'undefined' && typeof(legendaoperadores) != 'undefined') { %>

                                <% var turnodiurno, turnonoturno %>
                                <% turnodiurno = turnonoturno = 0 %>

                                <% operadoresturnos.forEach((element, index, array) => { %>
    
                                    <li class="tabelames">
    
                                        <div style="font-size: 1.75em;"><%= legendaoperadores[index] %></div>

                                        <div>       
                                            
                                            <div style="font-size: 1.5em;">

                                                <div>

                                                    Turno diurnos:
                                                    <%= element.filter((x) => { return x != 2 }).length %>

                                                </div>

                                                <div>

                                                    Turnos noturnos:
                                                    <%= element.filter((x) => { return x == 2 }).length %>

                                                </div>

                                                
                                                
                                            </div>

                                        </div>                       
    
                                    </li>  
    
                                <% }) %>
    
                            <% } %>

                        </div>


                    </div>



                </div>

            </div>

        </div>

    </body>
</html>